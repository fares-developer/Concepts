<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="firstViewModel"
            type="com.example.learning.ui.first.FirstViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        tools:context=".ui.first.FirstFragment">

        <include layout="@layout/list_posters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"/>

        <TextView
            android:id="@+id/texto"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{firstViewModel.textSuccess}"
            tools:text="@string/hello_there" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> firstViewModel.countDecr()}"
                android:src="@drawable/ic_baseline_remove_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/count_txt"
                style="?attr/textAppearanceHeadline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="@{firstViewModel.count.toString()}"
                tools:text="num" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> firstViewModel.countInc()}"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <Button
            android:id="@+id/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:onClick="@{()->firstViewModel.navigateTo()}"
            android:text="@string/finish" />

        <Button
            android:id="@+id/chagetext_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{()-> firstViewModel.changeText()}"
            android:text="@string/changetext" />

    </LinearLayout>

</layout>
