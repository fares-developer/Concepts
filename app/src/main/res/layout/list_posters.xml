<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/post"
                android:layout_width="200dp"
                android:layout_height="300dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="8dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/post_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/unsplash"
                        android:scaleType="centerCrop"
                        android:layout_gravity="top"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/post_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="#11000000"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Author: Diana Kuleniuk" />

                        <TextView
                            android:id="@+id/post_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="Downloads: 111.444" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/post2"
                android:layout_width="200dp"
                android:layout_height="300dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="8dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/post2_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/unsplash2"
                        android:scaleType="centerCrop"
                        android:layout_gravity="top"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/post2_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="#11000000"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post2_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Author: Diana Kuleniuk" />

                        <TextView
                            android:id="@+id/post2_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="Downloads: 111.444" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/post3"
                android:layout_width="200dp"
                android:layout_height="300dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="8dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/post3_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/unsplash3"
                        android:scaleType="centerCrop"
                        android:layout_gravity="top"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/post3_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="#11000000"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post3_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Author: Diana Kuleniuk" />

                        <TextView
                            android:id="@+id/post3_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="Downloads: 111.444" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/post4"
                android:layout_width="200dp"
                android:layout_height="300dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="8dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/post4_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/unsplash4"
                        android:scaleType="centerCrop"
                        android:layout_gravity="top"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/post4_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="#11000000"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post4_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Author: Diana Kuleniuk" />

                        <TextView
                            android:id="@+id/post4_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="Downloads: 111.444" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>